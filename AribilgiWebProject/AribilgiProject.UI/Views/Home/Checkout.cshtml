
@{
    ViewBag.PageName = "Checkout Page";
}
<div ng-controller="CheckoutCtrl">
    <!-- breadcrumb-area -->
    <section class="breadcrumb__area pt-60 pb-60 tp-breadcrumb__bg" data-background="/Content/img/banner/breadcrumb-01.jpg">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-7 col-lg-12 col-md-12 col-12">
                    <div class="tp-breadcrumb">
                        <div class="tp-breadcrumb__link mb-10">
                            <span class="breadcrumb-item-active"><a href="index.html">Home</a></span>
                            <span>Checkout</span>
                        </div>
                        <h2 class="tp-breadcrumb__title">@ViewBag.PageName</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->
    <!-- coupon-area start -->
    <section class="coupon-area pt-80 pb-30 wow fadeInUp" data-wow-duration=".8s" data-wow-delay=".2s">
        <div class="container">

        </div>
    </section>
    <!-- coupon-area end -->
    <!-- checkout-area start -->
    <section class="checkout-area pb-50 wow fadeInUp" data-wow-duration=".8s" data-wow-delay=".2s">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <form name="FormOrder">
                        <div class="checkbox-form">
                            <h3>Billing Details</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <div>
                                        <label>City <span class="required">*</span></label>
                                        <ui-select ng-model="Order.City" theme="bootstrap">
                                            <ui-select-match placeholder="Search...">{{city.CityName}}</ui-select-match>
                                            <ui-select-choices repeat="city in CityList | filter: city.CityName">
                                                <div ng-bind-html="city | highlight: city.CityName"></div>
                                            </ui-select-choices>
                                        </ui-select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="checkout-form-list">
                                        <label>First Name <span class="required">*</span></label>
                                        <input ng-model="Order.FirstName" type="text" placeholder="" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="checkout-form-list">
                                        <label>Last Name <span class="required">*</span></label>
                                        <input ng-model="Order.LastName" type="text" placeholder="" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="your-order mb-30 ">
                        <h3>Your order</h3>
                        <div class="your-order-table table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="product-name">Product</th>
                                        <th class="product-total">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="cart_item" ng-repeat="cart in ShoppingCart">
                                        <td class="product-name">
                                            {{cart.Product.Name}} <strong class="product-quantity"> × {{cart.Quantity}}</strong>
                                        </td>
                                        <td class="product-total">
                                            <span class="amount">${{cart.Product.UnitPrice}}</span>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr class="cart-subtotal">
                                        <th>Cart Subtotal</th>
                                        <td><span class="amount">${{GetSubTotal()}}</span></td>
                                    </tr>
                                    <tr class="shipping">
                                        <th>Shipping</th>
                                        <td>
                                            <ul>
                                                <li>
                                                    <input type="radio" name="shipping" />
                                                    <label>
                                                        Flat Rate: <span class="amount">$7.00</span>
                                                    </label>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                    <tr class="order-total">
                                        <th>Order Total</th>
                                        <td>
                                            <strong><span class="amount">$215.00</span></strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="payment-method">
                            <div class="order-button-payment mt-20">
                                <button type="button" ng-click="SaveOrder()" ng-disabled="FormOrder.$invalid" class="tp-btn tp-color-btn w-100 banner-animation">Place order</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- checkout-area end -->
</div>
@section AngularCtrl
{
    <script src="/Scripts/MyAngular/CheckoutCtrl.js"></script>
}